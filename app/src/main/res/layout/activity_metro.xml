<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_img_default"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.jackie.sample.custom_view.MetroImageView
                    android:id="@+id/metro_joke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/left_top"
                    android:scaleType="matrix"/>

                <com.jackie.sample.custom_view.MetroImageView
                    android:id="@+id/metro_creative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/left_bottom"
                    android:scaleType="matrix"/>
            </LinearLayout>

            <com.jackie.sample.custom_view.MetroImageView
                android:id="@+id/metro_constellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/right"
                android:scaleType="matrix"/>
        </LinearLayout>

        <com.jackie.sample.custom_view.MetroImageView
            android:id="@+id/metro_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/bottom"
            android:scaleType="matrix"/>
    </LinearLayout>
</LinearLayout>
