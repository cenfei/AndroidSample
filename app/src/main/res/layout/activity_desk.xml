<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackie.sample.desk.DeskActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_desk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="效果表"
        android:textSize="18dp"/>

    <View
        android:id="@+id/v_desk_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_below="@id/tv_desk_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_desk_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_desk_line"/>
</RelativeLayout>
